@model List<Jour>
@{
    ViewData["Title"] = "Home Page";
}
@foreach (var item in Model)
{
    if (item.ouvert)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/_xx/@item.Photo.photo" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Day @item.Id</h5>
            </div>
        </div>
    }
    else
    {
        if (item.Photo == null)
        {
            <input type="image" src="~/_background/@item.Page_couverture" />
        }
        else
        {
            <input type="hidden" name="booly" id="booly" value="@item" />
            <input type="image" src="~/_background/@item.Page_couverture" onclick="myFunction(@item.Id)" />
            <div id="@item.Id" style="display:none">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/_xx/@item.Photo.photo" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Day @item.Id</h5>
                        <audio controls autoplay>
                            <source src="~/NoelMusique/@item.Musique" type="audio/mpeg">
                        </audio>
                    </div>
                </div>
            </div>
        }
    }
}



<script>
    
    function myFunction(ID) {
        var x = document.getElementById(ID);
        if (x.style.display === "none") {
            x.style.display = "block";
            let audio = new Audio("~/NoelMusique/"+ID+".mp3")
            audio.play()
        }
    }
</script>